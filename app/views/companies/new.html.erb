<ul class="breadcrumb">
  <li><%= link_to 'My Companies', companies_path %> <span class="separator">/</span></li>
  <li class="active">New company</li>
</ul>

<h1>Create a new company</h1>

<%= form_for @company do |f| %>
  <%= form_text_input f, :text_field, :name, label: 'Company name', autofocus: true, class: 'xlarge' %>
  <div class="actions">
    <%= f.submit "Create company", class: 'btn primary' %>
    <%= link_to 'Cancel', companies_path, class: 'btn' %>
  </div>
<% end %>
